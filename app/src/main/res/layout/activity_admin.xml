<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText android:id="@+id/candidateNameInput"
        android:hint="Candidate Name" android:layout_width="match_parent" android:layout_height="wrap_content" />
    <Button android:id="@+id/addCandidateButton"
        android:text="Add Candidate" android:layout_width="match_parent" android:layout_height="wrap_content" />
</LinearLayout>
